{
   "env": {
      "es6": true,
      "node": true,
      "browser": true
   },
   "extends": "react-app",
   "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
         "jsx": true
      }
   },
   "rules": {
      "no-unused-vars": "warn",
      "indent": [
         "error",
         3
      ],
      "quotes": [
         "warn",
         "single"
      ],
      "semi": [
         "warn",
         "never"
      ],
      "react/jsx-uses-react": "off",
      "react/react-in-jsx-scope": "off"
   }
}